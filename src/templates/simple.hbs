<html lang="en">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/src/styles/styles.css" />
  </head>
  <body>
    <div class="p-10">
      <div class="mx-8 rounded-t-[12px] bg-[#F6F8FC] pt-[30px] pb-[16px] text-center">
        <p class="text-[12px] text-[#868DA6] font-[600]">
          {{recipientName}}<span class="font-[400] text-[10px]"> / {{recipientEmail}}</span>
        </p>
      </div>
      <div class="rounded-[20px] p-8 bg-[#3362CC] mb-8 flex justify-between" style="box-shadow: 0px 3px 12px 0px rgba(35, 136, 255, 0.33)">
        <div class="text-white">
          <p class="text-[8px] mb-[6px] ">INVOICE TO:</p>
          <p class="text-[14px] mb-[6px] font-[600] ">{{clientname}}</p>
          <p class="text-[10px] mb-[6px] leading-[10px]">
            {{clientEmail}}
          </p>
          <p class="text-[10px] max-w-[200px] leading-[14px]">
            {{billedTo}}
          </p>
        </div>
        <div
          style="
            box-shadow: 0px 1px 3px 0px rgba(25, 33, 61, 0.05),
              0px 2px 8px 0px rgba(25, 33, 61, 0.04);
          "
          class="p-3 bg-[#fff] rounded-[10px]"
        >
          <p class="text-[8px] text-[#868DA6]">AMOUNT DUE</p>
          <p class="text-[27px] font-[600] text-[#19213D]">{{currency}}
              {{totalAmount}}
            </p>
            <p class="text-[8px] text-[#868DA6]">
              {{dateFormat issuedOn "MMMM D, YYYY"}}
            </p>
        </div>
      </div>
      <!-- Invoice Details -->
      <div>
        <p class="ml-4 text-[12px] mb-1 text-[#868DA6]">INVOICE DETAILS</p>
        <div
          class="flex justify-between p-4 rounded-[10px]"
          style="
            border: 0.6px solid #ebeff6;
            box-shadow: 0px 1px 3px 0px rgba(25, 33, 61, 0.05),
              0px 2px 8px 0px rgba(25, 33, 61, 0.04);
          "
        >
          <div>
            <p class="text-[10px] mb-1 text-[#868DA6]">INVOICE NUMBER</p>
            <p class="text-[12px] font-[600] text-[#19213D]">
              {{invoiceNumber}}
            </p>
          </div>
          <div>
            <p class="text-[10px] mb-1 text-[#868DA6]">ISSUED</p>
            <p class="text-[12px] font-[600] text-[#19213D]">
              {{dateFormat issuedOn "MMMM D, YYYY" }}
            </p>
          </div>
          <div>
            <p class="text-[10px] mb-1 text-[#868DA6]">DUE DATE</p>
            <p class="text-[12px] font-[600] text-[#19213D]">
              {{dateFormat dueOn "MMMM D, YYYY" }}
            </p>
          </div>
        </div>
      </div>
      <div class="mt-6">
        <table class="mb-[54px] min-w-full">
          <thead>
            <tr class="">
              <th
                scope="col"
                class="py-3 px-4 text-[#868DA6] text-left text-[12px] font-[500]"
              >
                DESCRIPTION
              </th>
              <th
                scope="col"
                class="py-3 px-4 text-[#868DA6] text-left text-[12px] font-[500]"
              >
                QTY
              </th>
              <th
                scope="col"
                class="py-3 px-4 text-[#868DA6] text-left text-[12px] font-[500]"
              >
                PRICE
              </th>
              <th
                scope="col"
                class="py-3 px-4 text-[#868DA6] text-left text-[12px] font-[500]"
              >
                TOTAL
              </th>
            </tr>
          </thead>
          <tbody class="divide-[#cbd5e1]">
            {{#each items as |item|}}
            <tr
              style="border-bottom: 0.6px solid #ebeff6"
              class="hover:bg-gray-100 cursor-pointer odd:bg-[#EBEFF6] even:bg-white first:rounded-t-[16px] last:rounded-b-[16px]"
            >
              <td class="text-[#5D6481] text-[12px] font-[600] p-4">
                {{item.item}}
              </td>
              <td class="text-[#5D6481] text-[12px] font-[600] p-4">
                {{item.quantity}}
              </td>
              <td class="text-[#5D6481] text-[12px] font-[600] p-4">
                {{item.price}}
              </td>
              <td class="text-[#5D6481] text-[12px] font-[600] p-4">
                {{item.totalPrice}}
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>

        <div class="flex mb-8 justify-end">
          <div>
            <p class="text-right text-[#868DA6] text-[10px]">TOTAL AMOUNT</p>
            <p class="text-[24px] text-[#19213D] font-bold">{{currency}} {{totalAmount}}</p>
          </div>
        </div>

        <div>
          <p class="text-[10px] font-[600]">{{ recipientName}}</p>
          <p class="text-[#868DA6] text-[10px]">{{recipientEmail}}</p>
        </div>
      </div>
    </div>
  </body>
</html>
